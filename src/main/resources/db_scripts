CREATE TABLE  GA_FACULTY(
    id INT NOT NULL auto_increment, 
    EMP_NO VARCHAR(50),
    FIRST_NAME VARCHAR(200),
    MIDDLE_NAME VARCHAR(100),
    LAST_NAME VARCHAR(200),
    GENDER VARCHAR(10),
    PRM_ADDR1 VARCHAR(200),
    PRM_ADDR2 VARCHAR(200),
    PRM_ADDR_CITY VARCHAR(100),
    PRM_ADDR_STATE VARCHAR(100),
    PRM_ADDR_COUNTRY VARCHAR(100),
    PRM_ADDR_ZIP INT(10),
    DOB VARCHAR(10),
    MOBILE VARCHAR(50),
    EMAIL VARCHAR(100),
	PAN VARCHAR(10),
	DESIGNATION VARCHAR(10),
	QUALIFICATION VARCHAR(100),
	EMPLOYMENT_TYPE VARCHAR(100),
	STATUS VARCHAR(1),
	LOGIN_ACCOUNT_ID INT,
	IS_SUPERVISOR VARCHAR(1),
	SUPERVISOR_ID INT,
	ROLE_ID INT,
    PRIMARY KEY (id)
);


CREATE TABLE  GA_ROLES(
    id INT NOT NULL auto_increment, 
	ROLE_NAME VARCHAR(100),
	ROLE_DESC VARCHAR(100),
    PRIMARY KEY (id)
);


CREATE TABLE  GA_MODULES(
    id INT NOT NULL auto_increment, 
	NAME VARCHAR(100),
	PATH VARCHAR(100),
	DESC VARCHAR(100),
	ICON VARCHAR(100),	
    PRIMARY KEY (id)
);

CREATE TABLE  GA_MODULE_ACTIONS(
    id INT NOT NULL auto_increment, 
	ACTION VARCHAR(100),
	MODULE_ID INT,	
    PRIMARY KEY (id)
);

CREATE TABLE  ROLE_MODULES(
    id INT NOT NULL auto_increment, 
	ROLE_ID INT,
	MODULE_ID INT,
    PRIMARY KEY (id)
);


CREATE TABLE  GA_USER_LOGIN_ACCOUNT(
    id INT NOT NULL auto_increment, 
	USER_NAME VARCHAR(100),
	PASSWORD VARCHAR(100),
	STATUS INT DEFAULT 0,
    PRIMARY KEY (id)
);


CREATE TABLE  DESCIPLINES(
    id INT NOT NULL auto_increment, 
	NAME VARCHAR(100),
	DESC VARCHAR(100),
    PRIMARY KEY (id)
);

CREATE TABLE  ACADEMIC_YEAR(
    id INT NOT NULL auto_increment, 
	NAME VARCHAR(100),
	DESC VARCHAR(100),
    PRIMARY KEY (id)
);

CREATE TABLE  DESCP_ACADEMIC_YEAR(
    id INT NOT NULL auto_increment, 
	DESP_ID INT,
	ACD_YEAR_ID INT,
    PRIMARY KEY (id)
);

CREATE TABLE  FACULTY_ACADEMICS(
    id INT NOT NULL auto_increment, 
	FACULTY_ID INT,
	DISP_ACD_YEAR_ID INT,
    PRIMARY KEY (id)
);

CREATE TABLE  SYLLABUS(
    id INT NOT NULL auto_increment, 
	DESP_ACD_YEAR_ID INT,
	NAME VARCHAR(100),
	DESC VARCHAR(100),
    PRIMARY KEY (id)
);

CREATE TABLE  CHAPTERS(
    id INT NOT NULL auto_increment, 
    NAME VARCHAR(100),
	DESC VARCHAR(100),
	SYLLABUS_ID INT,
    PRIMARY KEY (id)
);
CREATE TABLE  COST_CENTER(
    id INT NOT NULL auto_increment, 
	MONTH VARCHAR(20),
	YEAR INT,
	STATUS VARCHAR(10),
    PRIMARY KEY (id)
);

CREATE TABLE  TIME_SHEET(
    id INT NOT NULL auto_increment, 
	USER_ID INT,
	MONTH VARCHAR(20),
	START_DATE DATE,
	END_DATE DATE,
	YEAR INT,
	STATUS VARCHAR(10),
	COST_CENTER_ID INT,
    PRIMARY KEY (id)
);

CREATE TABLE  DAY_WORK(
    id INT NOT NULL auto_increment,
    HOURS INT,
    DAY VARCHAR(3),
    _DATE DATE,
    COMMENTS VARCHAR(300), 
    ACTIVITY INT VARCHAR(300),
	TIME_SHEET_ID INT,
    PRIMARY KEY (id)
);


ALTER TABLE GA_FACULTY ADD CONSTRAINT FOREIGN KEY (ROLE_ID) REFERENCES GA_ROLES(id);
ALTER TABLE GA_FACULTY ADD CONSTRAINT FOREIGN KEY (SUPERVISOR_ID) REFERENCES GA_FACULTY(id);

ALTER TABLE GA_FACULTY ADD CONSTRAINT FOREIGN KEY (LOGIN_ACCOUNT_ID) REFERENCES GA_USER_LOGIN_ACCOUNT(id);

ALTER TABLE DESCP_ACADEMIC_YEAR ADD CONSTRAINT FOREIGN KEY (DESP_ID) REFERENCES DESCIPLINES(id);
ALTER TABLE DESCP_ACADEMIC_YEAR ADD CONSTRAINT FOREIGN KEY (ACD_YEAR_ID) REFERENCES ACADEMIC_YEAR(id);

ALTER TABLE SYLLABUS ADD CONSTRAINT FOREIGN KEY (DESP_ACD_YEAR_ID) REFERENCES DESCP_ACADEMIC_YEAR(id);
ALTER TABLE CHAPTERS ADD CONSTRAINT FOREIGN KEY (SYLLABUS_ID) REFERENCES SYLLABUS(id);

ALTER TABLE TIME_SHEET ADD CONSTRAINT FOREIGN KEY (USER_ID) REFERENCES GA_FACULTY(id);
ALTER TABLE TIME_SHEET ADD CONSTRAINT FOREIGN KEY (COST_CENTER_ID) REFERENCES COST_CENTER(id);
ALTER TABLE DAY_WORK ADD CONSTRAINT FOREIGN KEY (TIME_SHEET_ID) REFERENCES TIME_SHEET(id);



ALTER TABLE FACULTY_ACADEMICS ADD CONSTRAINT FOREIGN KEY (FACULTY_ID) REFERENCES GA_FACULTY(ID);
ALTER TABLE FACULTY_ACADEMICS ADD CONSTRAINT FOREIGN KEY (DISP_ACD_YEAR_ID) REFERENCES DESCP_ACADEMIC_YEAR(ID);

ALTER TABLE GA_MODULE_ACTIONS ADD CONSTRAINT FOREIGN KEY (MODULE_ID) REFERENCES GA_MODULES(ID);

ALTER TABLE ROLE_MODULES ADD CONSTRAINT FOREIGN KEY (MODULE_ID) REFERENCES GA_MODULES(ID);
ALTER TABLE ROLE_MODULES ADD CONSTRAINT FOREIGN KEY (ROLE_ID) REFERENCES GA_ROLES(ID);



